from tkinter import *
from PIL import Image, ImageTk


#root window
aditi_root = Tk()
aditi_root.geometry("500x500")
aditi_root.title("ANTIQUETTES SHOPPING GUIDE CHATBOT")
aditi_root.minsize(200 , 200)
aditi_root.maxsize(2000,1000)

#frame
#'''f1=Frame(aditi_root,borderwidth=19, bg="grey", relief=SUNKEN)
#f1.pack(side=TOP, fill="x" , pady=100)'''


#background image

image=Image.open("background.jpg")
photo=ImageTk.PhotoImage(image)                   
hello_label = Label(aditi_root,image=photo)
hello_label.pack(expand=True,fill=BOTH)


#TITLE
title_label=Label(hello_label,text="HELLO ANTIQUES",bg="black",fg="white", font=("algerian 40 bold italic"),bd=5)
