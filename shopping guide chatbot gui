question1.grid(row=1,column=1)


def ques(hello_label):
    question2=Label(hello_label,text="What's your next choice?(choose)",bg="black",fg="white",font=("Times 30 bold italic"),bd=3)
    question2.grid(row=6,column=1)
ques(hello_label)

